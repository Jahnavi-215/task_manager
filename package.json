{
  "name": "task-management-system",
  "version": "1.0.0",
  "description": "A complete MERN stack task management application",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
